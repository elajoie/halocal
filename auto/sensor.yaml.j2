{% for d in doorsensor %}
  - platform: mqtt
    name: "{{ d.name }}"
    state_topic: "stat/{{ d.name }}/BATT"
    icon: mdi:battery
    unique_id: '{{ d.name }}_battery'
    device:
      identifiers:
        - '{{ d.name }}'
      name: "{{ d.name }}"
      manufacturer: Tasmota

{% endfor %}
{% for t in temp %}
  - platform: mqtt
    name: "{{ t.name }} Temp"
    state_topic: "tele/{{ t.name }}/SENSOR"
